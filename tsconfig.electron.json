{
  "compilerOptions": {
    "outDir": "./electron/dist",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "electron/**/*.ts"
  ]
}
